<Window
    x:Class="Ryujinx.Ava.UI.Applet.BrowserAppletWindow"
    x:DataType="views:BrowserAppletWindow"
    mc:Ignorable="d"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:locale="clr-namespace:Ryujinx.Ava.Common.Locale"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:webview="clr-namespace:WebViewControl;assembly=WebViewControl.Avalonia"
    xmlns:views="using:Ryujinx.Ava.UI.Applet"
    Title="{locale:Locale BrowserWindowTitleEmpty}"
    Width="1280"
    Height="720"
    CanResize="False"
    Focusable="True">
    
    <Window.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding Close}" />
        <KeyBinding Gesture="F12" Command="{Binding ShowWebViewDevTools}" />
    </Window.KeyBindings>

    <webview:WebView x:Name="WebView"
                     Focusable="True"
                     AllowDeveloperTools="True"
                     DisableBuiltinContextMenus="True"
                     DisableFileDialogs="True "/>
    
</Window>
